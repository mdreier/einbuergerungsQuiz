<mvc:View
		xmlns="sap.m"
		xmlns:mvc="sap.ui.core.mvc"
        controllerName="de.martindreier.ebq.controller.Play"
		displayBlock="true">
	<Page
        title="{
            parts: [
                { path: 'i18n>questionPageTitle' },
                { path: 'quiz>/questions/number' },
                { path: 'quiz>/questions/count' }
            ],
            formatter: '.formatMessage'
        }"
        enableScrolling="false">
        <content>
            <VBox alignContent="Center" alignItems="Center" fitContainer="true">
                <Text text="{question}" class="sapUiLargeMarginTopBottom" />
                <VBox id="questionsSection" items="{answers}"  alignContent="Center" alignItems="Center">
                    <items>
                        <Button text="{text}" press="onAnswer" enabled="{= !${view>/resultsActive} }" />
                    </items>
                </VBox>
                <VBox id="answerSection" alignContent="Center" alignItems="Center" visible="{view>/resultsActive}">
                    <items>
                        <Panel 
                            content="{
                                path: 'answers',
                                filters: {
                                    path: 'correct',
                                    operator: 'EQ',
                                    value1: true
                                }
                            }"
                            headerText="{i18n>result}"
                        >
                            <content>
                                <Text text="{
                                    parts: [
                                        { path: 'i18n>correctAnswer' },
                                        { path: 'text' }
                                    ],
                                    formatter: '.formatMessage'
                                }"  />
                            </content>
                        </Panel>
                        <Button text="{i18n>nextQuestion}" press="onNextQuestion" />
                    </items>
                </VBox>
            </VBox>
        </content>
    </Page>
</mvc:View>